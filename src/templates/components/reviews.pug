script(type="text/x-template")#reviews-container
    .slider 
        .slider__header.reviews__header
            .section-title Что обо мне говорят
            .slider__buttons 
                button(type="button" @click="slide('prev')").round-btn.round-btn--right
                button(type="button" @click="slide('next')").round-btn.round-btn--left
        swiper(ref="swiper" :options="swiperOptions")
            swiper-slide(v-for="review in reviews" :key="review.id")
              .quote__text 
                p {{review.text}}
              .quote__user 
                .user-display__avatar 
                  .user-display__avatar--style 
                    img(:src="review.pic").user-display__pic
                .user-display__data
                  .user-display__name {{review.name}}
                  .user-display__occ {{review.occ}}